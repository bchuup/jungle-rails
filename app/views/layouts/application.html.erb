<!DOCTYPE html>
<html>
<head>
  <title>Jungle</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="signin">
    <% if current_user %>
      Hello <%= current_user.first_name %> | <%= link_to "Logout", "sessions/#{current_user.id}" , :method => :delete %>
    <% else %>
      <%= link_to 'Login', '/sessions/new' %> | <%= link_to 'Signup', '/users/new' %>
    <% end %>
  </div>

  <%= render 'layouts/top_nav' %>

  <main class="container">
    <%= yield %>
  </main>

  <%= yield :end_of_body %>
</body>
</html>
